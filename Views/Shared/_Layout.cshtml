<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - CMCS</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Contract Monthly Claim System (CMCS)</h1>
    </header>

    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li><a asp-controller="Claim" asp-action="Submit">Submit Claim</a></li>
            <li><a asp-controller="Claim" asp-action="Status">View Claim Status</a></li>
            @if (User.IsInRole("Coordinator") || User.IsInRole("Manager"))
            {
                <li><a asp-controller="Claim" asp-action="Approve">Approve Claims</a></li>
            }
            <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
        </ul>
    </nav>

    <section>
        @RenderBody()
    </section>

    <footer>
        <p>&copy; 2024 - CMCS</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>