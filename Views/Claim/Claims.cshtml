@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Your Claims";
}

<h2>Your Claims</h2>

<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>File Name</th>
            <th>Status</th>
            <th>Submitted Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.FileName</td>
                <td>@claim.Status</td>
                <td>@claim.SubmittedDate.ToShortDateString()</td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <form asp-action="ApproveClaim" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                        <form asp-action="RejectClaim" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-danger">Reject</button>
                        </form>
                    }
                    ]
                </td>
            </tr>
        }
    </tbody>
</table>








