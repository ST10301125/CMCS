@model CMCS.Models.Claim

<div class="claim-form">
    <h2 style="color: #ff0000;">Submit Your Claim</h2> 
    <form asp-action="SubmitClaim" asp-controller="ClaimController" method="post" enctype="multipart/form-data" style="background-color: #fff; padding: 20px; border-radius: 8px;">
        <div class="form-group">
            <label for="HoursWorked" style="color: #ff0000;">Hours Worked</label> 
            <input type="number" class="form-control" id="HoursWorked" name="HoursWorked" placeholder="Enter hours worked" style="background-color: #f8f8f8; color: black;" required> 
        </div>
         
        <div class="form-group">
            <label for="HourlyRate" style="color: #ff0000;">Hourly Rate</label> 
            <input type="number" class="form-control" id="HourlyRate" name="HourlyRate" placeholder="Enter hourly rate" style="background-color: #f8f8f8; color: black;" required> 
        </div>

        <div class="form-group">
            <label for="Notes" style="color: #ff0000;">Additional Notes</label> 
            <textarea class="form-control" id="Notes" name="Notes" rows="3" placeholder="Add additional notes" style="background-color: #f8f8f8; color: black;"></textarea> 
        </div>
        <br />
        <br />
        <div class="form-group">
            <label for="SupportingDoc">Upload Supporting Document</label>
            <input type="file" class="form-control" id="SupportingDoc" name="SupportingDoc" accept=".pdf,.docx,.xlsx" />
        </div>

        <button type="submit" style="color: #ff0000;" class="btn btn-primary btn-lg">Submit</button>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('SupportingDoc').addEventListener('change', function () {
            var fileName = this.files[0] ? this.files[0].name : 'No file chosen';
            document.getElementById('file-name-display').innerText = fileName;
        });
    </script>
}
