@model IEnumerable<CMCS.Models.Claim>

<div class="claim-list">
    <h2>Pending Claims</h2>
    
     @if (!Model.Any())
    {
        <p>No pending claims</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Notes</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimID</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td> 
                    <td>@claim.Notes</td>
                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="Approve" method="post" style="display:inline;">
                            <input type="hidden" name="ClaimID" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-success">Approve</button> 
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline;">
                            <input type="hidden" name="ClaimID" value="@claim.ClaimID" />
                            <button type="submit" class="btn btn-danger">Reject</button> 
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
