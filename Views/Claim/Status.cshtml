@model IEnumerable<CMCS.Models.ClaimStatus>

<h2>Your Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Claim Number</th>
            <th>Date Submitted</th>
            <th>Status</th>
            <th>Supporting Documents</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimNumber</td>
                <td>@claim.DateSubmitted.ToString("dd/MM/yyyy")</td>
                <td>@claim.Status</td>
                <td>
                    <a href="@Url.Content(claim.SupportingDocumentPath)">View Document</a>
                </td>
            </tr>
        }
    </tbody>
</table>