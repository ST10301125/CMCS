@model IEnumerable<CMCS.Models.Claim>

<h2>Manage Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Date Submitted</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.LecturerName</td>
                <td>@claim.Status</td>
                <td>@claim.TotalAmount.ToString("C")</td>
                <td>@claim.SubmittedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="ClaimDetails" asp-route-id="@claim.ClaimID" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
